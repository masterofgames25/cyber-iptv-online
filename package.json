{
  "name": "cyberpunk-iptv-crm",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 5175 --strictPort",
    "build": "vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "clean": "node -e \"const fs=require('fs');['dist','dist-electron','dist-electron-neon'].forEach(d=>{if(fs.existsSync(d)) fs.rmSync(d,{recursive:true,force:true})}); console.log('Cleaned build folders');\"",
    "build:clean": "npm run clean && npm run build && npm run build:electron && node electron/create-package-json.cjs",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "check": "tsc -b --noEmit",
    "electron": "npx electron dist-electron/main.js",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5175 && npm run build:electron && node electron/create-package-json.cjs && npx electron dist-electron/main.js\"",
    "electron:build": "npm run build && npm run build:electron && node electron/create-package-json.cjs && electron-builder",
    "electron:build:portable": "npm run build && npm run build:electron && node electron/create-package-json.cjs && electron-builder --win portable",
    "electron:build:clean": "npm run clean && npm run build && npm run build:electron && node electron/create-package-json.cjs && electron-builder",
    "electron:pack": "electron-builder --dir",
    "packager:win": "npm run build && npm run build:electron && node electron/create-package-json.cjs && electron-packager . NEON --platform=win32 --arch=x64 --out=dist-packager --overwrite --icon=projetoneon.ico --prune=false",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@supabase/supabase-js": "^2.87.1",
    "clsx": "^2.1.1",
    "flatpickr": "^4.6.13",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.511.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.3.0",
    "recharts": "^3.4.1",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.0.2",
    "vite-plugin-pwa": "^1.2.0",
    "workbox-window": "^7.4.0",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.3"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.cyberpunk.iptv.crm",
    "productName": "NEON",
    "directories": {
      "output": "dist-electron-neon"
    },
    "asar": true,
    "npmRebuild": false,
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "projetoneon.ico"
    },
    "asarUnpack": [
      "node_modules/sqlite3/**",
      "**/*.node"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.15.30",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/sqlite3": "^3.1.11",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "babel-plugin-react-dev-locator": "^1.0.0",
    "concurrently": "^9.2.1",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jsdom": "^24.0.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-trae-solo-badge": "^1.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.0.5",
    "wait-on": "^9.0.3"
  }
}
